 <h2 class="team-title"> New Dream Team! </h2><br><br>
<% @errors && @errors.each do |e| %>
  <li><%=e%></li>
<%end%>
<div class="form">
<%= form_for(@team, url: user_teams_path(@user)) do |f|%>
  <p><%=f.label "Team Name", class: "member"%></p>
