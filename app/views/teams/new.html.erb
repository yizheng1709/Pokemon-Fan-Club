  <%=poke_member.label "Pokemon Nickname", class: "member" %><span class="small-space"></span>
  <%=poke_member.text_field (:pokemon_nickname) %> <br>
  <%end%>
  <%#input for pokemon nickname%>
  
  <%#f.label "Member 2", class: "member"%>
