<h2 class="index-title"> My Teams </h2>
<br><br>
<div class="index-div">
<br>
<ul class="index-ul">
<% @teams.each do |team| %>
<li><%= link_to team.name, user_team_path(current_user, team), class: "index-link" %></li>
<%end%>
</ul>
<br>
</div>

<style>

.index-ul {
    list-style-type: none;
}

.index-link {
    font-family: "Chicken";
    text-decoration: none;
    font-size: 25px;
}

.index-title {
    text-align: center;
    font-size: 40px;
    font-family: "PokemonSolid";
    letter-spacing: 3px;
}

.index-div {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    background-color: rgba(229, 230, 255, 0.68);
    border-radius: 20px;
    width:500px;
}

.index-div:hover {
    transform: scale(1.05);
    transition: 0.6s ease-in-out;
}

</style>