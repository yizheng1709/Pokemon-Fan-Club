<h2 class="index-title"> My Dream Teams </h2>
<br><br><br>
<div class="index-div">
<br>

<%if !@teams.empty?%>
<% @teams.each do |team| %>
<p class="index-li"><%= link_to team.name, user_team_path(current_user, team), class: "index-link" %></p>
<%end%>
<%else%>
<p class="index-li">Such empty :(</p>
<%end%>

<br>
</div>
<br><br><br>
<div class="div-for-button">
<a href="<%=new_user_team_path%>">
<button type="button" value="Add Another Dream Team" class="index-button">
    Add Another Dream Team
</button></a>
</div>
