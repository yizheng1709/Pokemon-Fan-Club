<%= form_for user do |f|%>
<label class="form-cred">Username</label><br>
<%= f.text_field :name, :class => "signup-input" %><br><br>

<label class="form-cred">Password</label><br>
<%= f.password_field :password, :class => "signup-input" %> <br><br>

<label class="form-cred">Password Confirmation</label><br>
<%= f.password_field :password_confirmation, :class => "signup-input" %> <br><br><br>

<%= f.submit "Start My Journey" %>
<% end %>

<style>

.signup-input {
    border: 2px solid #d9dbff;
    border-radius: 10px;
    color: #5a75d1;
    font-family: "Chicken";
    box-shadow: 1px 1px 4px 1px #e8f7ff; 

}

.form-cred {
    font-family: "Chicken";
    color: #699dff;
    font-size: 23px;
}

</style>