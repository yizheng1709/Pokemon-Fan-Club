<style>

@font-face {
  font-family: 'PokemonHollow';
  src: url('/assets/PokemonHollow.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'PokemonSolid';
  src: url('/assets/PokemonSolid.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Chicken';
  src: url('/assets/Chicken.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'MilkyNice';
  src: url('/assets/MilkyNice.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

.rotate-center {
  font-family: "PokemonSolid";
  text-align: center;
  letter-spacing: 3px;
  color: #cc3b3b;
  font-size: 70px;
  text-shadow: 5px 5px 8px #949494;
  -webkit-text-stroke: 3px #a10000;
	-webkit-animation: rotate-center 0.6s ease-in-out both;
	        animation: rotate-center 2.6s ease-in-out both;
}

@-webkit-keyframes rotate-center {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

@keyframes rotate-center {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

.title:hover {
    transform: scale(1.1);
    transition: 0.8s ease-in-out;
}

.nav-link {
  font-family: "PokemonSolid";
  letter-spacing: 3px;
  font-size: 28px;
  -webkit-text-stroke: 1px #3570db;
  color: #5e97ff;
}

.nav-link:hover {
  transform: scale(1.18);
  transition: 0.6s ease-in-out;
  color: #3570db;
}

</style>

</body>
