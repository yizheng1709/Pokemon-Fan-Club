<style>
html {
  cursor: url("/assets/Pokemon.cur"), default;
}
@font-face {
  font-family: 'PokemonHollow';
  src: url('/assets/PokemonHollow.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'PokemonSolid';
  src: url('/assets/PokemonSolid.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Chicken';
  src: url('/assets/Chicken.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'MilkyNice';
  src: url('/assets/MilkyNice.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

.right-span {
  padding-right: 13px;
}

.left-span {
  padding-left: 13px;
}

.ball {
  width: 5%;
}

.rotate-center {
  font-family: "PokemonSolid";
  text-align: center;
  letter-spacing: 3px;
  color: #cc3b3b;
  font-size: 70px;
  text-shadow: 5px 5px 8px #949494;
  -webkit-text-stroke: 3px #a10000;
}

@-webkit-keyframes rotate-center {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

@keyframes rotate-center {
  0% {
    -webkit-transform: rotate(0);
            transform: rotate(0);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}

.title:hover {
    transform: scale(1.1);
    transition: 0.8s ease-in-out;

}

.no-link {
  text-decoration: none;
}

.nav1 {
    background: rgba(214, 228, 255, 0.56);
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    border: 3px solid #c4d7ff;
    height: 90px;
}

.nav-bar {
    display: block;
    padding: 7px 20px;
}

.nav-link {
  font-family: "PokemonSolid";
  letter-spacing: 3px;
  font-size: 28px;
  -webkit-text-stroke: 1.5px #8fb4ff;
  color: #5886db;
}

.nav-link:hover {
  transform: scale(1.18);
  /* transition: 0.4s ease-in-out; */
  color: #777bc9;
  -webkit-text-stroke: 1.5px #a1a5ff;
}

.nav-link:active {
  color: #cc3b3b;
  -webkit-text-stroke: 1.5px #a10000;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #d4e2ff;
  letter-spacing: 1.2px;
  font-family: "PokemonSolid";
  min-width: 150px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  color: #788cff;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {
  background-color: #ebf1ff;
  color: #8458db;
  }

.dropdown:hover .dropdown-content {
  display: block;
}


.dropdownlink:hover {
  color: #b52487;
  transform: scale(1.03);
}

.dropdownlink:active {
  color: #503b94;
}

.footer {
  background: rgba(214, 228, 255, 0.56);
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  border: 1px solid #c4d7ff;

}

.bot {
  width: 180px;
  display: inline;
}

</style>

