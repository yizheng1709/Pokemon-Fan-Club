<div class="search-bar">
<%= form_tag("/pokemons", :method => "get") do %>
<span class="text-search">
Search by
</span>
<span class="text-search">
<select name="searching_for" id="searching_for" class="searching_for">
  <option value="types">Type</option>
  <option value="pokedex_number">Pok√©dex Number</option>
  <option value="name">Name</option>
</select> 
<%# Type:  %>
</span>
<%= text_field_tag :query, "", class: "search" %>
<span class="search-padding"></span>
<button class="search-button">Search</button>
<% end %>
</div>
<br><br>

<%if @pokemons.count != 1%>
<div class="display-box">
<% @pokemons.each do |p| %>
<div class="container">
 <a href="<%=pokemon_path(p)%>" class="poke-link"> <img src="<%=p.image%>" class="image">
    <div class="overlay"><%=p.name%></div> </a>
</div>
<% end %>
</div>
<%else%>
<% @pokemons.each do |p| %>
<div class="container-2">
 <a href="<%=pokemon_path(p)%>" class="poke-link"> <img src="<%=p.image%>" class="image-2">
    <div class="overlay"><%=p.name%></div> </a>
</div>
<%end%>
<%end%>


